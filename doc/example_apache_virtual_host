<VirtualHost *:80>
	ServerName rest.fastreboot.de
	#ServerAlias drake.hftl-brainreset.de
	ServerAdmin hostmaster@localhost


	DocumentRoot /var/www/drake/shownotes

    ScriptAlias / /home/USERNAME/REST/
    <Directory "/home/USERNAME/REST/">
        AllowOverride none
        Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
        Order allow,deny
        Allow from all
    </Directory>


	ErrorLog /var/log/apache2/sms_error.log
	CustomLog /var/log/apache2/sms.log combined

	Options None 
</VirtualHost>
